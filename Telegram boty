from telegram import Update
from telegram.ext import ApplicationBuilder, ContextTypes, MessageHandler, filters
import logging
import httpx
import asyncio
import os

BOT_TOKEN = os.environ.get("BOT_TOKEN")  # ÙŠØ³ØªØ®Ø¯Ù… Ø§Ù„Ø³Ø± Ø§Ù„Ù…Ø®ÙÙŠ
CHANNEL_ID = "@ghujbd"  # â— Ø¶Ø¹ ÙŠÙˆØ²Ø±/ID Ø§Ù„Ù‚Ù†Ø§Ø© Ù‡Ù†Ø§

logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
    level=logging.INFO
)
logger = logging.getLogger(__name__)

async def add_reaction(update: Update, context: ContextTypes.DEFAULT_TYPE):
    try:
        async with httpx.AsyncClient() as client:
            response = await client.post(
                f"https://api.telegram.org/bot{BOT_TOKEN}/setMessageReaction",
                json={
                    "chat_id": update.channel_post.chat.id,
                    "message_id": update.channel_post.message_id,
                    "reaction": [{"type": "emoji", "emoji": "ğŸ‘"}]
                }
            )
            if response.status_code == 200:
                logger.info("ØªÙ… Ø§Ù„ØªÙØ§Ø¹Ù„ Ø¨Ù†Ø¬Ø§Ø­!")
            else:
                logger.error(f"ÙØ´Ù„: {response.text}")
    except Exception as e:
        logger.error(f"Ø®Ø·Ø£: {e}")

async def main():
    app = ApplicationBuilder().token(BOT_TOKEN).build()
    app.add_handler(MessageHandler(filters.UpdateType.CHANNEL_POST, add_reaction))
    await app.initialize()
    await app.start()
    await asyncio.Event().wait()  # Ø§Ù„ØªØ´ØºÙŠÙ„ Ø¥Ù„Ù‰ Ù…Ø§ Ù„Ø§ Ù†Ù‡Ø§ÙŠØ©

if __name__ == "__main__":
    asyncio.run(main())
